<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinApp_Keep.WritePage"
             Title="WritePage">
    <ContentPage.Content>
        <StackLayout>
            <Editor Text="Napište něco....." FontSize="Small" FontFamily="Arial" HeightRequest="200"></Editor>
            <Button Text="Zapsat poznámku" BackgroundColor="#2196F3" TextColor="White"></Button>
            <Picker x:Name="categories_picker" VerticalOptions="Center" BackgroundColor="White" SelectedIndexChanged="columnPicker_SelectedIndexChanged">
                <Picker.Items >
                    <x:String >Vše</x:String>
                </Picker.Items>
            </Picker>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>