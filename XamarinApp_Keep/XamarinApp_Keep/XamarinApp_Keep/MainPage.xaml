<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:XamarinApp_Keep"
             x:Class="XamarinApp_Keep.MainPage">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Sign Up" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Picker VerticalOptions="Center" BackgroundColor="White" >
                <Picker.Items>
                    <x:String >PIN</x:String>
                    <x:String >Heslo</x:String>
                </Picker.Items>
            </Picker>
            <Entry x:Name="passwordEntry" IsPassword="true" VerticalOptions="Center"/>
            <Button Text="Login" VerticalOptions="End"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>